server {
    listen       80;
    server_name  localhost;
    root   /var/www;

    auth_basic           "Marcis Maps";
    auth_basic_user_file /htpass/.htpasswd;

    location ~* ^/data/(.+)/(.+)$ {
        try_files $uri $uri/;
    }

    location / {
        try_files $uri /index.html;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }
}

